<div class="container">
  
<% if flash[:new_account] %>
  <h4 class="center-align indigo-text text-darken-1"> <%= flash[:new_account] %> </h4>
<% else %>
  <h4 class="center-align indigo-text text-darken-1">Login</h4>
<% end %>

  <%= form_tag sessions_path do %>
  <%= text_field_tag :email, nil, {placeholder: 'Email', class: 'center-align'} %>
  <%= password_field_tag :password, nil, {placeholder: 'Password', class: 'center-align'} %>
  <div class="section">
    <div class="center-align">
    <%= submit_tag "Sign In", class: "btn indigo lighten-3" %>
    </div>
  </div>
  <% end %>

  <div class="section">
    <div class="center-align">
    <%= link_to "Create an account", client_signup_path, class: "" %>
    </div>
  </div>

</div>
